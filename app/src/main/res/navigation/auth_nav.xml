<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_auth"
    app:startDestination="@id/signin_fragment">

    <fragment
        android:id="@+id/signin_fragment"
        android:name="me.martichou.unswayed.ui.signin.SigninFragment"
        tools:layout="@layout/signin_fragment">
        <action
            android:id="@+id/gotoSignup"
            app:destination="@id/signup_fragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_none_anim"
            app:popEnterAnim="@anim/nav_default_enter_anim"
            app:popExitAnim="@anim/nav_default_exit_none_anim"
            app:popUpTo="@id/signin_fragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/signup_fragment"
        android:name="me.martichou.unswayed.ui.signup.SignupFragment"
        tools:layout="@layout/signup_fragment">
        <action
            android:id="@+id/gotoSignin"
            app:destination="@id/signin_fragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_none_anim"
            app:popEnterAnim="@anim/nav_default_enter_anim"
            app:popExitAnim="@anim/nav_default_exit_none_anim"
            app:popUpTo="@id/signup_fragment"
            app:popUpToInclusive="true" />
    </fragment>

</navigation>