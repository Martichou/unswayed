<resources>
    <!-- Application theme for dark theme. -->
    <style name="Theme.Unswayed" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teel_200</item>
        <item name="colorSecondaryVariant">@color/teel_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorAccent">@color/tint</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/floatingBgColor</item>
        <item name="android:windowLightStatusBar">false</item>
        <!-- Customize your theme here. -->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowBackground">@color/backgroundColor</item>
        <item name="actionOverflowButtonStyle">@style/MyOverflowButtonStyle</item>
        <item name="actionModeBackground">@color/floatingBgColor</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="SplashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="android:windowBackground">@drawable/splashscreen_black</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:statusBarColor">@color/backgroundColor</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

</resources>